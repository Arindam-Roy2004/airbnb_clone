<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/nav') %>

    <main class="container mx-auto flex items-center justify-center min-h-[calc(100vh-80px)] py-4">
      <div class="bg-white rounded-xl shadow-xl border border-gray-200 p-8 w-full max-w-md">
        <!-- Valid Login Form -->
        <div class="text-center mb-6 border-b border-gray-200 pb-4">
          <h1 class="text-lg font-bold text-gray-800">Log in or sign up</h1>
        </div>

        <div class="mb-6">
           <h2 class="text-2xl font-semibold text-gray-800 mb-2">Welcome to StayEase</h2>
        </div>

        <!-- Login Form -->
        <form action="/login" method="POST" class="space-y-4">
          <!-- Error Display -->
          <% if(typeof errors !== 'undefined' && errors.length > 0){ %>
            <div class="flex items-center gap-2 text-red-600 text-sm mb-2 px-1">
               <i class="fa-solid fa-circle-exclamation"></i>
              <% if(Array.isArray(errors)) { %>
                  <span><%= errors[0] %></span>
              <% } else { %>
                <span><%= errors %></span>
              <% } %>
            </div>
          <% } %>

          <!-- Email Field -->
          <div class="border border-gray-400 rounded-lg overflow-hidden focus-within:border-black focus-within:ring-1 focus-within:ring-black">
             <div class="px-3 pt-2">
                <label for="email" class="block text-xs text-gray-500">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Email address"
                  class="w-full border-none p-0 text-gray-900 placeholder-gray-400 focus:ring-0 sm:text-sm pb-2 outline-none"
                  required
                />
             </div>
             <div class="border-t border-gray-400 px-3 pt-2">
                <label for="password" class="block text-xs text-gray-500">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Password"
                  class="w-full border-none p-0 text-gray-900 placeholder-gray-400 focus:ring-0 sm:text-sm pb-2 outline-none"
                  required
                />
             </div>
          </div>

          <p class="text-xs text-gray-500 mt-2">
             We'll call or text you to confirm your number. Standard message and data rates apply. <a href="#" class="underline font-medium text-gray-800">Privacy Policy</a>
          </p>

          <button
            type="submit"
            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-airbnb hover:bg-airbnb-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
          >
            Continue
          </button>
        </form>

        <div class="mt-6">
           <div class="relative">
              <div class="absolute inset-0 flex items-center">
                 <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                 <span class="px-2 bg-white text-gray-500 text-xs">or</span>
              </div>
           </div>

           <div class="mt-6 grid gap-3">
              <a href="/signup" class="w-full flex items-center justify-center px-4 py-3 border border-gray-800 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition relative">
                 <i class="fa-regular fa-envelope absolute left-4 text-lg"></i>
                 <span>Sign up with Email</span>
              </a>
           </div>
        </div>
      </div>
    </main>
  </body>
</html>