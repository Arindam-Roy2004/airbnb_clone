<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8 h-20 flex justify-between items-center">
    <!-- Left side - Logo -->
    <a href="/" class="flex items-center gap-1">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true" role="presentation" focusable="false" style="display: block; height: 32px; width: 32px; fill: currentcolor;" class="text-airbnb">
