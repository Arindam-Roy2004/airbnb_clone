<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 mt-10 pb-20 max-w-7xl">
        <div class="mb-10">
          <h2 class="text-3xl font-semibold text-gray-900 mb-2">
            Wishlists
          </h2>
          <p class="text-gray-600 text-lg">Your saved homes</p>
        </div>
        
        <% if (favHomes && favHomes.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-10">
          <% favHomes.forEach(home=> { %>
            <div class="group cursor-pointer">
              <div class="relative aspect-square overflow-hidden rounded-xl bg-gray-200 mb-3">
                <img src="<%= home.photoPath %>" alt="<%= home.houseName %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-300">
                <div class="absolute top-3 right-3">
                   <form action="/favourites" method="POST">
                      <input type="hidden" name="homeId" value="<%= home._id %>">
                      <button type="submit" class="text-white hover:scale-110 transition drop-shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-7 h-7">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                        </svg>
                      </button>
                    </form>
                </div>
              </div>
              
              <a href="/homes/<%= home.slug %>" class="block">
                <div class="flex justify-between items-start">
                  <h3 class="font-semibold text-gray-900 truncate pr-2"><%= home.location %></h3>
                  <div class="flex items-center gap-1">
                    <i class="fa-solid fa-star text-xs"></i>
                    <span class="text-sm font-light"><%= home.rating %></span>
                  </div>
                </div>
                <p class="text-gray-500 text-sm font-light"><%= home.houseName %></p>
                <div class="mt-1 flex items-baseline gap-1">
                  <span class="font-semibold text-gray-900">â‚¹<%= home.price %></span>
                  <span class="text-gray-900 font-light">night</span>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
        <% } else { %>
          <div class="text-center py-20">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 rounded-full mb-6">
              <i class="fa-regular fa-heart text-3xl text-gray-400"></i>
            </div>
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">No saves yet</h2>
            <p class="text-gray-600 mb-6 max-w-md mx-auto">As you search, click the heart icon to save your favorite places and experiences to a wishlist.</p>
            <a href="/homes" class="inline-block px-6 py-3 bg-airbnb hover:bg-airbnb-dark text-white font-semibold rounded-lg transition">
              Start exploring
            </a>
          </div>
        <% } %>
      </main>
  </body>

  </html>