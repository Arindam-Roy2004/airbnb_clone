<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 mt-10 pb-20 max-w-7xl">
        <div class="text-center mb-10">
          <h2 class="text-4xl text-red-500 font-bold mb-3">
            My Favourites
          </h2>
          <p class="text-gray-600 text-lg">Your saved properties in one place</p>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% favHomes.forEach(home=> { %>
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-52 object-cover">
              <div class="p-5">
                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                  <%= home.houseName %>
                </h3>
                <p class="text-gray-600 mb-3 flex items-center"><i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                  <%= home.location %>
                </p>
                <div class="flex justify-between items-center mb-4">
                  <span class="text-xl font-bold text-red-500">â‚¹<%= home.price %> <span class="text-sm text-gray-600 font-normal">/ night</span></span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                      class="w-5 h-5 text-yellow-400 mr-1">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700 font-semibold">
                      <%= home.rating %>
                    </span>
                  </div>
                </div>
                <div class="flex flex-col gap-2">
                  <!-- Book Now Button -->
                  <a href="/homes/<%= home._id %>/book"
                    class="w-full inline-flex items-center justify-center rounded-lg bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 px-4 py-3 text-white font-semibold transition-all shadow-md hover:shadow-lg transform hover:scale-105">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                      <path
                        d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707l-2-2A1 1 0 0015 7h-1z" />
                    </svg>
                    Book Now
                  </a>
                  
                  <!-- Remove from Favourites Button -->
                  <form action="/favourites/delete/<%= home._id%>" method="POST" class="w-full">
                    <input type="hidden" name="homeId" value="<%= home._id%>">
                    <button type="submit"
                      class="w-full inline-flex items-center justify-center rounded-lg bg-red-50 px-4 py-2 text-red-600 font-semibold transition-all hover:bg-red-100 border border-red-200 hover:border-red-300">
                      <%- include('../partials/delete.ejs') %>
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>