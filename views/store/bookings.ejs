<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto mt-10 px-4 pb-20">
    <h1 class="text-4xl font-bold text-red-500 mb-8 text-center">My Bookings</h1>
    
    <% if (bookings && bookings.length > 0) { %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% bookings.forEach(booking => { %>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <!-- Home Image -->
            <div class="relative h-48">
              <img 
                src="<%= booking.home.photoPath %>" 
                alt="<%= booking.home.houseName %>"
                class="w-full h-full object-cover"
              >
              <!-- Status Badge -->
              <div class="absolute top-2 right-2">
                <span class="px-3 py-1 rounded-full text-xs font-semibold
                  <% if (booking.status === 'confirmed') { %>
                    bg-green-100 text-green-800
                  <% } else if (booking.status === 'pending') { %>
                    bg-yellow-100 text-yellow-800
                  <% } else { %>
                    bg-gray-100 text-gray-800
                  <% } %>
                ">
                  <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                </span>
              </div>
            </div>

            <!-- Booking Details -->
            <div class="p-5">
              <h3 class="text-xl font-bold text-gray-800 mb-2">
                <%= booking.home.houseName %>
              </h3>
              
              <p class="text-gray-600 mb-4 flex items-center">
                <i class="fas fa-map-marker-alt mr-2"></i>
                <%= booking.home.location %>
              </p>

              <!-- Dates -->
              <div class="bg-gray-50 p-3 rounded-lg mb-4 space-y-2">
                <div class="flex items-center text-sm text-gray-700">
                  <i class="fas fa-calendar-check mr-2 text-green-600"></i>
                  <span class="font-medium mr-2">Check-in:</span>
                  <%= new Date(booking.checkIn).toLocaleDateString('en-US', { 
                    weekday: 'short', 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  }) %>
                </div>
                <div class="flex items-center text-sm text-gray-700">
                  <i class="fas fa-calendar-times mr-2 text-red-600"></i>
                  <span class="font-medium mr-2">Check-out:</span>
                  <%= new Date(booking.checkOut).toLocaleDateString('en-US', { 
                    weekday: 'short', 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  }) %>
                </div>
              </div>

              <!-- Price -->
              <div class="flex justify-between items-center mb-4 pt-2">
                <span class="text-gray-700 font-medium">Total Price:</span>
                <span class="text-2xl font-bold text-green-600">â‚¹<%= booking.totalPrice %></span>
              </div>

              <!-- Actions -->
              <div class="flex gap-3">
                <a 
                  href="/homes/<%= booking.home._id %>"
                  class="flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded-lg font-medium transition-colors"
                >
                  View Property
                </a>
                
                <% if (booking.status === 'confirmed') { %>
                  <form action="/bookings/delete/<%= booking._id %>" method="POST" class="flex-1" onsubmit="return confirm('Are you sure you want to cancel this booking?')">
                    <button 
                      type="submit"
                      class="w-full bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-lg font-medium transition-colors"
                    >
                      Cancel
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="text-center py-20">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 mx-auto text-gray-300 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <h2 class="text-3xl font-bold text-gray-700 mb-4">No Bookings Yet</h2>
        <p class="text-gray-500 mb-8 text-lg">Start exploring and book your perfect stay!</p>
        <a 
          href="/homes"
          class="inline-flex items-center justify-center bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-8 rounded-lg transition-colors shadow-lg"
        >
          <i class="fas fa-search mr-2"></i>
          Browse Homes
        </a>
      </div>
    <% } %>
  </main>
</body>
</html>