<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto mt-10 px-4 pb-20 max-w-7xl">
    <div class="mb-10">
      <h1 class="text-3xl font-semibold text-gray-900 mb-2">Trips</h1>
      <p class="text-gray-600 text-lg">Your upcoming and past bookings</p>
    </div>
    
    <% if (bookings && bookings.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% bookings.forEach(booking => { %>
          <div class="bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
            <!-- Home Image -->
            <div class="relative h-56">
              <img 
                src="<%= booking.home.photoPath %>" 
                alt="<%= booking.home.houseName %>"
                class="w-full h-full object-cover"
              >
              <!-- Status Badge -->
              <div class="absolute top-3 right-3">
                <span class="px-3 py-1.5 rounded-lg text-xs font-semibold backdrop-blur-sm
                  <% if (booking.status === 'confirmed') { %>
                    bg-green-500/90 text-white
                  <% } else if (booking.status === 'pending') { %>
                    bg-yellow-500/90 text-white
                  <% } else { %>
                    bg-gray-500/90 text-white
                  <% } %>
                ">
                  <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                </span>
              </div>
            </div>
            
            <!-- Booking Details -->
            <div class="p-5">
              <h3 class="text-lg font-semibold text-gray-900 mb-1">
                <%= booking.home.houseName %>
              </h3>
              <p class="text-gray-500 text-sm mb-4 flex items-center">
                <i class="fa-solid fa-location-dot mr-2"></i>
                <%= booking.home.location %>
              </p>
              
              <div class="space-y-2 mb-4 text-sm">
                <div class="flex items-center text-gray-700">
                  <i class="fa-regular fa-calendar w-5 text-gray-400"></i>
                  <span class="ml-2"><strong>Check-in:</strong> <%= new Date(booking.checkInDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
                </div>
                <div class="flex items-center text-gray-700">
                  <i class="fa-regular fa-calendar w-5 text-gray-400"></i>
                  <span class="ml-2"><strong>Check-out:</strong> <%= new Date(booking.checkOutDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
                </div>
                <div class="flex items-center text-gray-700">
                  <i class="fa-solid fa-users w-5 text-gray-400"></i>
                  <span class="ml-2"><strong>Guests:</strong> <%= booking.numberOfGuests %></span>
                </div>
              </div>
              
              <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                <div>
                  <p class="text-xs text-gray-500">Total price</p>
                  <p class="text-xl font-bold text-gray-900">â‚¹<%= booking.totalPrice.toLocaleString() %></p>
                </div>
                <a href="/homes/<%= booking.home.slug %>" class="px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-gray-800 transition">
                  View details
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-20">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 rounded-full mb-6">
          <i class="fa-regular fa-calendar-xmark text-3xl text-gray-400"></i>
        </div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">No trips booked...yet!</h2>
        <p class="text-gray-600 mb-6 max-w-md mx-auto">Time to dust off your bags and start planning your next adventure</p>
        <a href="/homes" class="inline-block px-6 py-3 bg-airbnb hover:bg-airbnb-dark text-white font-semibold rounded-lg transition">
          Start searching
        </a>
      </div>
    <% } %>
  </main>
</body>
</html>