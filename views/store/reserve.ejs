<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto px-4 mt-10 mb-20 max-w-5xl">
    <!-- Back button -->
    <div class="mb-6">
      <a href="/homes/<%= home.slug %>" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to property
      </a>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gradient-to-r from-green-600 to-green-700 p-6">
        <h1 class="text-3xl font-bold text-white">Complete Your Booking</h1>
        <p class="text-green-100 mt-2">Just a few steps away from your perfect stay</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 p-8">
      <!-- Left: Home Preview -->
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-6 rounded-lg border border-gray-200">
        <img src="<%= home.photoPath %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-lg mb-4 shadow-md">
        <h2 class="text-xl font-bold text-gray-800 mb-2"><%= home.houseName %></h2>
        <p class="text-gray-600 mb-4 flex items-center">
          <i class="fas fa-map-marker-alt mr-2 text-red-500"></i><%= home.location %>
        </p>
        <div class="flex items-center justify-between border-t border-gray-300 pt-4">
          <span class="text-gray-700 font-medium">Price per night:</span>
          <span class="text-2xl font-bold text-green-600">₹<%= home.price %></span>
        </div>
      </div>

      <!-- Right: Booking Form -->
      <div>
        <form action="/bookings/create" method="POST" class="space-y-6" onsubmit="return validateDates()">
          <input type="hidden" name="homeId" value="<%= home._id %>">
          
          <!-- Check-in Date -->
          <div>
            <label for="checkIn" class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-calendar-check text-green-600 mr-1"></i> Check-in Date
            </label>
            <input 
              type="date" 
              id="checkIn" 
              name="checkIn" 
              min="<%= minDate %>"
              value="<%= checkIn %>"
              onchange="calculateTotal()"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all"
            >
          </div>

          <!-- Check-out Date -->
          <div>
            <label for="checkOut" class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-calendar-times text-red-600 mr-1"></i> Check-out Date
            </label>
            <input 
              type="date" 
              id="checkOut" 
              name="checkOut" 
              min="<%= minDate %>"
              value="<%= checkOut %>"
              onchange="calculateTotal()"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all"
            >
          </div>

          <!-- Price Breakdown (hidden initially) -->
          <div id="priceBreakdown" class="hidden bg-gradient-to-br from-green-50 to-blue-50 p-5 rounded-lg border-2 border-green-200 shadow-sm">
            <h3 class="text-sm font-semibold text-gray-700 mb-3 uppercase tracking-wide">Price Summary</h3>
            
            <div class="space-y-2 mb-3">
              <div class="flex justify-between text-gray-700">
                <span>₹<%= home.price.toLocaleString('en-IN') %> × <span id="nights" class="font-semibold">0</span> nights</span>
                <span class="font-semibold">₹<span id="basePrice">0</span></span>
              </div>
              
              <div class="flex justify-between text-gray-700">
                <span>Cleaning fee</span>
                <span>₹<%= pricing.CLEANING_FEE.toLocaleString('en-IN') %></span>
              </div>
              
              <div class="flex justify-between text-gray-700">
                <span>Service fee</span>
                <span>₹<%= pricing.SERVICE_FEE.toLocaleString('en-IN') %></span>
              </div>
            </div>
            
            <div class="border-t-2 border-green-300 pt-3 space-y-2">
              <div class="flex justify-between text-gray-700">
                <span>Subtotal</span>
                <span class="font-semibold">₹<span id="subtotal">0</span></span>
              </div>
              
              <div class="flex justify-between text-gray-700">
                <span>Taxes (12%)</span>
                <span class="font-semibold">₹<span id="taxes">0</span></span>
              </div>
              
              <div class="flex justify-between font-bold text-xl border-t-2 border-green-400 pt-3 mt-2">
                <span class="text-gray-800">Total</span>
                <span class="text-green-600">₹<span id="totalPrice">0</span></span>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-bold py-4 px-6 rounded-lg transition-all shadow-lg hover:shadow-xl flex items-center justify-center transform hover:scale-105"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Confirm Booking
          </button>
        </form>
      </div>
    </div>
  </main>

  <script>
    // Pricing constants from server
    const pricePerNight = Number('<%= home.price %>');
    const cleaningFee = <%= pricing.CLEANING_FEE %>;
    const serviceFee = <%= pricing.SERVICE_FEE %>;
    const taxRate = <%= pricing.TAX_RATE %>;
    
    // Update total price display
    function calculateTotal() {
      const checkIn = document.getElementById('checkIn').value;
      const checkOut = document.getElementById('checkOut').value;
      
      if (checkIn && checkOut) {
        const checkInDate = new Date(checkIn);
        const checkOutDate = new Date(checkOut);
        const nights = Math.ceil((checkOutDate - checkInDate) / (1000 * 60 * 60 * 24));
        
        if (nights > 0) {
          const basePrice = nights * pricePerNight;
          const subtotal = basePrice + cleaningFee + serviceFee;
          const taxes = Math.round(subtotal * taxRate);
          const total = subtotal + taxes;
          
          document.getElementById('nights').textContent = nights;
          document.getElementById('basePrice').textContent = basePrice.toLocaleString('en-IN');
          document.getElementById('subtotal').textContent = subtotal.toLocaleString('en-IN');
          document.getElementById('taxes').textContent = taxes.toLocaleString('en-IN');
          document.getElementById('totalPrice').textContent = total.toLocaleString('en-IN');
          document.getElementById('priceBreakdown').classList.remove('hidden');
        } else {
          document.getElementById('priceBreakdown').classList.add('hidden');
        }
      }
    }

    // Run calculation on load if dates are present
    window.addEventListener('DOMContentLoaded', () => {
      if (document.getElementById('checkIn').value && document.getElementById('checkOut').value) {
        calculateTotal();
      }
    });

    // Validate dates before submission
    function validateDates() {
      const checkIn = new Date(document.getElementById('checkIn').value);
      const checkOut = new Date(document.getElementById('checkOut').value);
      
      if (checkOut <= checkIn) {
        alert('Check-out date must be after check-in date!');
        return false;
      }
      return true;
    }

    // Update check-out min date when check-in changes
    document.getElementById('checkIn').addEventListener('change', function() {
      const checkInDate = this.value;
      document.getElementById('checkOut').min = checkInDate;
    });
  </script>
</body>
</html>