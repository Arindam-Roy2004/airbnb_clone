<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
      <% if (home) { %>
        <!-- Back button -->
        <div class="mb-6">
          <a
            href="/homes"
            class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to homes
          </a>
        </div>

        <!-- Home details -->
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Image section -->
          <div>
            <img
              src="<%= home.photoUrl || 'https://via.placeholder.com/800x500?text=No+Image' %>"
              alt="<%= home.houseName %>"
              class="w-full h-80 object-cover rounded-lg shadow-md"
            >
          </div>

          <!-- Details section -->
          <div>
            <h1 class="text-3xl text-red-500 font-bold mb-3"><%= home.houseName %></h1>
            <p class="text-gray-600 mb-4 flex items-center">
              <i class="fas fa-map-marker-alt mr-2"></i><%= home.location || 'Location unavailable' %>
            </p>

            <div class="flex justify-between items-center mb-6 pb-6 border-b">
              <span class="text-2xl font-bold text-red-500">
                Rs<%= home.price %> <span class="text-base text-gray-600 font-normal">/ night</span>
              </span>
              <div class="flex items-center bg-yellow-50 px-3 py-1 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700 font-semibold"><%= home.rating %></span>
              </div>
            </div>

            <!-- Property ID -->
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">Property Details</h3>
              <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-gray-600"><span class="font-semibold">Property ID:</span> <%= home.id %></p>
              </div>
            </div>

            <!-- Action buttons -->
            <div class="flex gap-3 mb-4">
              <button
                type="button"
                class="flex-1 inline-flex items-center justify-center rounded-lg bg-green-600 px-6 py-3 text-white font-medium transition-colors hover:bg-green-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-green-500 focus-visible:ring-offset-2 shadow-md"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                  <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707l-2-2A1 1 0 0015 7h-1z" />
                </svg>
                Book Now
              </button>
              <button
                type="button"
                class="inline-flex items-center justify-center rounded-lg bg-red-50 px-4 py-3 text-red-600 font-medium transition-colors hover:bg-red-100 focus:outline-none focus-visible:ring-2 focus-visible:ring-red-500 focus-visible:ring-offset-2"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Additional information section -->
        <div class="mt-8 pt-8 border-t">
          <h3 class="text-2xl font-semibold text-gray-800 mb-4">About this property</h3>
          <div class="bg-gray-50 p-6 rounded-lg">
            <p class="text-gray-700 leading-relaxed">
              Welcome to <%= home.houseName %>! This beautiful property is located in <%= home.location %>, 
              offering you a comfortable and memorable stay. With a rating of <%= home.rating %> stars, 
              you can expect quality service and excellent amenities during your visit.
            </p>
            <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="flex items-center gap-2 text-gray-700">
                <i class="fas fa-wifi text-blue-500"></i>
                <span>Free WiFi</span>
              </div>
              <div class="flex items-center gap-2 text-gray-700">
                <i class="fas fa-parking text-blue-500"></i>
                <span>Free Parking</span>
              </div>
              <div class="flex items-center gap-2 text-gray-700">
                <i class="fas fa-snowflake text-blue-500"></i>
                <span>Air Conditioning</span>
              </div>
              <div class="flex items-center gap-2 text-gray-700">
                <i class="fas fa-utensils text-blue-500"></i>
                <span>Kitchen</span>
              </div>
            </div>
          </div>
        </div>

      <% } else { %>
        <div class="text-center py-16">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <h2 class="text-2xl font-bold text-gray-800 mb-3">Home not found</h2>
          <p class="text-gray-600 mb-6">The property you're looking for doesn't exist or has been removed.</p>
          <a
            href="/homes"
            class="inline-flex items-center justify-center rounded-lg bg-blue-600 px-6 py-3 text-white font-medium transition-colors hover:bg-blue-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
          >
            Browse all homes
          </a>
        </div>
      <% } %>
    </main>
  </body>
</html>
