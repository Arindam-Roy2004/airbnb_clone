<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 pb-20 max-w-[1600px]">
        <!-- Categories Filter (Mock) -->
        <div class="flex gap-8 overflow-x-auto pb-4 mb-6 no-scrollbar pt-2 justify-start md:justify-center">
          <% const categories = [
            { name: 'Amazing pools', icon: 'fa-person-swimming' },
            { name: 'Farms', icon: 'fa-tractor' },
            { name: 'Amazing views', icon: 'fa-mountain' },
            { name: 'Cabins', icon: 'fa-house-chimney-window' },
            { name: 'Beachfront', icon: 'fa-umbrella-beach' },
            { name: 'Camping', icon: 'fa-campground' },
            { name: 'Tiny homes', icon: 'fa-house-user' },
            { name: 'Lakefront', icon: 'fa-sailboat' },
            { name: 'Treehouses', icon: 'fa-tree' },
            { name: 'Luxury', icon: 'fa-gem' }
          ]; %>
          <% categories.forEach((cat, index) => { %>
            <div class="flex flex-col items-center gap-2 min-w-[64px] cursor-pointer group opacity-60 hover:opacity-100 transition duration-200 border-b-2 border-transparent hover:border-gray-300 pb-2">
              <div class="text-2xl text-gray-600 group-hover:text-black transition">
                <i class="fa-solid <%= cat.icon %>"></i>
              </div>
              <span class="text-xs font-medium whitespace-nowrap group-hover:text-black transition"><%= cat.name %></span>
            </div>
          <% }) %>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-10">
          <% registeredHomes.forEach(home=> { %>
            <div class="group cursor-pointer">
              <div class="relative aspect-square overflow-hidden rounded-xl bg-gray-200 mb-3">
                <img src="<%= home.photoPath %>" alt="<%= home.houseName %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-300">
                <div class="absolute top-3 right-3">
                   <form action="/favourites" method="POST">
                      <input type="hidden" name="homeId" value="<%= home._id %>">
                      <button type="submit" class="text-white hover:scale-110 transition drop-shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="rgba(0,0,0,0.5)" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-7 h-7">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                        </svg>
                      </button>
                    </form>
                </div>
              </div>
              
              <a href="/homes/<%= home.slug %>" class="block">
                <div class="flex justify-between items-start">
                  <h3 class="font-semibold text-gray-900 truncate pr-2"><%= home.location %></h3>
                  <div class="flex items-center gap-1">
                    <i class="fa-solid fa-star text-xs"></i>
                    <span class="text-sm font-light"><%= home.rating %></span>
                  </div>
                </div>
                <p class="text-gray-500 text-sm font-light"><%= home.houseName %></p>
                <p class="text-gray-500 text-sm font-light">Nov 12-17</p>
                <div class="mt-1 flex items-baseline gap-1">
                  <span class="font-semibold text-gray-900">â‚¹<%= home.price %></span>
                  <span class="text-gray-900 font-light">night</span>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
      </main>
  </body>

  </html>