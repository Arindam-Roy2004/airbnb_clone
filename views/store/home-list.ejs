<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 pb-20">
        <!-- Categories Filter (Mock) -->
        <div class="flex gap-8 overflow-x-auto pb-4 mb-6 no-scrollbar">
          <% const categories = ['Amazing pools', 'Farms', 'Amazing views', 'Cabins', 'Beachfront', 'OMG!', 'Tiny homes', 'Lakefront', 'Treehouses', 'Mansions']; %>
          <% categories.forEach((cat, index) => { %>
            <div class="flex flex-col items-center gap-2 min-w-[64px] cursor-pointer group opacity-70 hover:opacity-100 transition <%= index === 0 ? 'opacity-100 border-b-2 border-black pb-2' : 'hover:border-b-2 hover:border-gray-300 pb-2' %>">
              <div class="text-2xl">
                <% if(index % 3 === 0) { %>üèùÔ∏è<% } else if(index % 3 === 1) { %>üè°<% } else { %>üè∞<% } %>
              </div>
              <span class="text-xs font-medium whitespace-nowrap"><%= cat %></span>
            </div>
          <% }) %>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <div class="group cursor-pointer">
              <div class="relative aspect-square overflow-hidden rounded-xl bg-gray-200 mb-3">
                <img src="<%= home.photoPath %>" alt="<%= home.houseName %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-300">
                <div class="absolute top-3 right-3">
                   <form action="/favourites" method="POST">
                      <input type="hidden" name="homeId" value="<%= home._id %>">
                      <button type="submit" class="text-white hover:scale-110 transition drop-shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="rgba(0,0,0,0.5)" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-7 h-7">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                        </svg>
                      </button>
                    </form>
                </div>
              </div>
              
              <a href="/homes/<%= home.slug %>" class="block">
                <div class="flex justify-between items-start">
                  <h3 class="font-semibold text-gray-900 truncate pr-2"><%= home.location %></h3>
                  <div class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-black">
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm"><%= home.rating %></span>
                  </div>
                </div>
                <p class="text-gray-500 text-sm"><%= home.houseName %></p>
                <p class="text-gray-500 text-sm">Nov 12-17</p>
                <div class="mt-1 flex items-baseline gap-1">
                  <span class="font-semibold text-gray-900">‚Çπ<%= home.price %></span>
                  <span class="text-gray-900">night</span>
                </div>
              </a>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>